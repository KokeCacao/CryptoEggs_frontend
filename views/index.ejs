        tr.appendChild(td_dna);
        tr.appendChild(td_name);
        tr.appendChild(td_lineage);
        tr.appendChild(td_breed);
        tr.appendChild(td_kill);
        tr.appendChild(td_freeze);
        return tr;
      }

